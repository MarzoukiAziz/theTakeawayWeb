{% extends 'back-office.html.twig' %}



{% block contenu %}


    <div class="card mb-3" >
        <div class="card-header " style="font-size: 22px;font-weight: bold;">
            <i class="fa fa-table"></i> LES BLOG

        </div>




        <body>


        <div class="container">
            <div class="row g-3">
                {% for blog_client in blog_clients %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card">
                            <img src="{{ asset('couverture/'~blog_client.image) }}"alt="image" width="200" height="200" class="card-img-top" >
                            <div class="card-body">
                                <h5 class="card-title">{{ blog_client.title }}</h5>

                                <p class="card-text"><b>{{ blog_client.contenu }}</b></p><br>
                                <small><p>{{ blog_client.date ? blog_client.date|date('Y-m-d') : '' }}</p></small><br>
                                <a href="{{ path('blog_admin_show', {'id': blog_client.id}) }}"><button class="btn btn-primary">show details</button></a>
                            </div>
                        </div>
                    </div>
                {% else %}

                    <p >no records found</p>
                {% endfor %}

            </div>

        </div>





        <!-- Optional JavaScript; choose one of the two! -->

        <!-- Option 1: Bootstrap Bundle with Popper -->
