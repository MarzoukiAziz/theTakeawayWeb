{% block contenu %}
    <div class="card mb-3" >
        <div class="card-header " style="font-size: 22px;font-weight: bold;">
            <i class="fa fa-table"></i> LES BLOGS
        </div>
            <div class="col-md-3">
                {% include 'blog_client/admin/filter.html.twig' %}
            </div>
        <div class="card-body" style="text-align: center">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr style="background-color: #212529;color: whitesmoke"></th>
                        <th>id blog</th>
                        <th>title</th>
                        <th>image</th>
                        <th>statut</th>
                        <th>contenu</th>
                        <th>Date</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>


        <body>
        </div>
        {% for blog_client in blog_clients %}
            <tr>
                <td>{{ blog_client.Id }}</td>
                <td>{{ blog_client.title }}</td>
                <td><img src="{{ asset('couvertures/'~blog_client.image) }}"alt="image"  class="card-img-top" ></td>
            <td>{{ blog_client.statut }}</td>
                <td>{{ blog_client.contenu| striptags | slice(0, 100) }}...</td>
                <td>{{ blog_client.date ? blog_client.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('blog_admin_show', {'id': blog_client.id}) }}"><button class="btn btn-primary">Consulter</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de blog trouv√©! </td>
            </tr>
        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>





