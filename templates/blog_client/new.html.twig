{% extends 'front-office.html.twig' %}



{% block contenu %}


<div style="display: table;margin:30px auto;color: whitesmoke;">
    <div style="background-image: url({{ asset("assets/front-office/images/topbg.jpg") }});" class="fixed-bg"></div>


    <div class="">
        <h1 class="h3 mb-3 font-weight-normal mt-2 text-center">Ajouter votre blog </h1>


    </div>

</div>
    <div class="container" style="width: 50%;">
    <div class="row">
        <div class="col s12 m12 l12">
        </div>
    </div>

        {{ form_start(f) }}
        <form>
            <div class="form-group">
                {{ form_label(f.title, 'title',{'attr': {'class': 'form-label'}} ) }}
                {{ form_widget(f.title , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Title'}} ) }}
                {{ form_errors(f.title) }}
            </div>
            <div class="form-group">
                {{ form_label(f.contenu, 'Le contenu',{'attr': {'class': 'form-label'}} ) }}
                {{ form_widget(f.contenu , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'Le contenu','rows':'8'}} ) }}
                {{ form_errors(f.contenu) }}
            </div>
            <div class="form-group">
                {{ form_label(f.image, 'image',{'attr': {'class': 'form-label'}} ) }}
                {{ form_widget(f.image , {'attr': {'class': 'form-control form-control-user' , 'placeholder' : 'image'}} ) }}
                {{ form_errors(f.image) }}
            </div>

            <button type="submit" style="float: right" class="btn btn-success">Confirmer</button>
            <button type="reset" class="btn btn-warning">Recommencer</button>

            {{ form_end(f) }}

        </form>


    </div>
    <a href="{{ path('blog_client_index') }}">back to list</a>

{% endblock %}