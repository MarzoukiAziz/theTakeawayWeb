{% extends 'back-office.html.twig' %}


{% block links %} <title>Promotions</title>{% endblock %}


{% block contenu %}

{% block title %}<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Promotion</li>
</ol>{% endblock %}

{% block body %}
    <h1>Promotion index</h1>

    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">DateDebut</th>
                <th scope="col">DateFin</th>
                <th scope="col">HeureDebut</th>
                <th scope="col">HeureFin</th>
                <th scope="col">Banner</th>
                <th scope="col">PrixPromo</th>
                <th scope="col">Mise a jours</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.dateDebut ? promotion.dateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.dateFin ? promotion.dateFin|date('Y-m-d') : '' }}</td>
                <td>{{ promotion.heureDebut ? promotion.heureDebut|date('H:i:s') : '' }}</td>
                <td>{{ promotion.heureFin ? promotion.heureFin|date('H:i:s') : '' }}</td>
                <td>{{ promotion.banner }}</td>
                <td>{{ promotion.prixPromo }}</td>
                <td>
                    <a class="btn_1 gray" href="{{ path('promotion_show', {'id': promotion.id}) }}"><i class="fa fa-fw fa-eye"></i>show</a>
                    <a class="btn_1 gray approve" href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn_1 gray approve" href="{{ path('promotion_new') }}">Ajouter</a>
{% endblock %}

{% endblock %}
