{% extends "back-office.html.twig" %}

{% block links %}
    <title>Commandes</title>
{% endblock %}

{% block contenu %}
    <div class="card mb-3" >
        <div class="card-header" style="font-size: 22px;font-weight: bold">
{# <i class="fa fa-table"></i> Tables <span style="float: right">{{ res_nom }}</span> #}
        </div>

        <div class="card-header" style="text-align: center">
            <img src="https://www.kpulse.fr/public/images/blog/miniature_bdc_bdl.jpg">
        </div>
        <div class="card-body" style="text-align: center">
{# <a href="/admin/commandes/{{ res }}/add"><button type="button" class="btn btn-primary ml-5 mb-2">Ajouter Une Commande</button></a>#}
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                    <tr></th>
                        <th>Client_ID</th>
                        <th>Nom_Client</th>
                        <th>Restaurant</th>
                        <th>Prix total</th>
                        <th>Date</th>
                        <th>Heure</th>
                        <th>Statuts_Commande</th>
                        <th>Employee_Charge</th>
                        <th>Methaude_depaiement</th>
                        <th>Point_utilisee</th>
                        <th></th>


                    </tr>
                    </thead>
                    <tbody>

                    {% for t in commandes %}
                        <tr>
                            <td>{{ t.clientId.id }}</td>
                            <td>{{ t.clientId.nom }}</td>
                            <td>{{ t.restaurantId.nom}}</td>
                            <td>{{ t.prixTotal}} Dt</td>
                            <td>{{ t.date|date('Y-m-d') }}</td>
                            <td>{{ t.heure|date('G:i')}}<br>
                            <td>{{ t.statut}}</td>
                            <td>{{ t.employeCharge.nom }}</td>
                            <td>{{ t.methode}}</td>
                            <td>{{ t.pointUtilisees}}</td>
                            <td>
                                <button type="button" class="btn btn-warning  ">Modifier</button>
                                <button type="button" class="btn btn-danger ml-5 ">Supprimer</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}