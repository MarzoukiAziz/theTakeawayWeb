{% extends "front-office.html.twig" %}

{% block links %}
    <title>Menu  Element</title>
{% endblock %}

{% block contenu %}
    <main class="container pt-5">
    <section class="">
        {% for produit in menu %}
            <div class="" >
                    <h2>{{ produit.nom }}</h2>

                    <img class="w-100" src= "{{ asset("assets/front-office/images/resource/dish-img2-1.jpg") }}" alt="dish-img1-1.jpg" itemprop="image">
                    <p>{{ produit.prix }} Dt</p>
                    <a href="{{ path("cart_add", {id :produit.id}) }}" class="btn btn-success">
                        <i class="bi bi-cart-plus"></i> Ajouter
                    </a>
                <hr>
            </div>
        {% endfor %}
    </section>
</main>
{% endblock %}


























